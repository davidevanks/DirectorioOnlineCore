@model Models.ViewModels.CatCategoryViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Crear Categoría hijo";
}


<section class="py-7 py-md-10 bg-light height100vh">
    <div class="container">
        <div class="border p-6 p-lg-9 bg-white">
            <div class="row">
                <div class="col-md-6 col-xs-12 pr-md-6 pr-lg-9">
                    <form asp-action="UpsertChild" method="post">
                        <input type="hidden" asp-for="IdPadre" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (Model.Id != 0)
                        {
                            title = "Actualizar categoría hijo";
                        }
                        <h2 class="h3 mb-6">@title</h2>
                        <div class="form-group mb-6">
                            <input asp-for="Nombre" id="txtNombreCatPrincipal" type="text" class="form-control border" placeholder="Nombre categoria" required="">
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-6">
                            <div class="form-check">
                                <input asp-for="Activo"  class="form-check-input" type="checkbox" id="chkboxActivo">
                                <label class="form-check-label" for="gridCheck">
                                    Activo

                                </label>
                            </div>
                        </div>

                        <div class="form-group mb-0">
                            @if (Model.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary text-uppercase py-2 px-4">Actualizar</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary text-uppercase py-2 px-4">Guardar</button>
                            }

                            <a asp-area="Catalogos" asp-action="AddCatChild" asp-route-id="@Model.IdPadre" asp-controller="CatCategory" class="btn btn-warning text-white text-uppercase py-2 px-4">Regresar</a>
                        </div>

                        <hr class="my-7 d-md-none">
                    </form>
                </div>


            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
