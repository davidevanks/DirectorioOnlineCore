<section class="bg-light pb-8 pt-5 height100vh">
    <div class="container">
        <!-- Breadcrumb -->
        <nav class="bg-transparent breadcrumb breadcrumb-2 px-0 mb-5" aria-label="breadcrumb">
            <h3 class="font-weight-normal mb-4 mb-md-0">Administración de Cupones</h3>
            <input id="idConfigCat" type="hidden" value="@ViewBag.idConfigCat"/>
            <a asp-area="Cuponera" asp-controller="Cuponera" asp-action="Add" id="btnCrear" class="btn btn-primary text-white"><i class="fa fa-plus"></i>Agregar nuevo producto/servicio</a>
        


        </nav>


        <div id="my-listing_wrapper" class="dataTables_wrapper no-footer">
            <table id="tblCupon" class="  cell-border  table-data-default dataTable no-footer dtr-inline" style="width: 100%;" role="grid">
                <thead>
                    <tr class="table-row-bg-white" role="row">
                        <th rowspan="1" colspan="1" style="width: 10px;" aria-label="Views">#Codigo Item</th>
                        <th rowspan="1" colspan="1" style="width: 10px;" aria-label="Views">Nombre producto/servicio</th>
                        <th rowspan="1" colspan="1" style="width: 10px;" aria-label="Views">Tiene descuento</th>
                        <th rowspan="1" colspan="1" style="width: 10px;" aria-label="Views">Valor descuento (%)</th>
                        <th rowspan="1" colspan="1" style="width: 10px;" aria-label="Views">Moneda</th>
                        <th rowspan="1" colspan="1" style="width: 10px;" aria-label="Views">Precio Unitario</th>
                        <th rowspan="1" colspan="1" style="width: 10px;" aria-label="Views">Disponible</th>
                        <th></th>
                    </tr>
                </thead>

            </table>
